                    <!--android:id="@+id/downloadCoinsTV"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1.3"-->
                    <!--android:gravity="center_vertical|right"-->
                    <!--android:textSize="18dp"-->
                    <!--android:text="100 coins" />-->


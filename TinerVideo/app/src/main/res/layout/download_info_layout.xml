<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ProgressBar
        android:id="@+id/downloadProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:max="100"
        android:progress="50"
        android:progressBackgroundTint="@color/partAlphaBlack"
        android:progressTint="@color/processGrayLine"
        android:secondaryProgressTint="@color/grayLine"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:thumbTint="@color/whiteColor" />

    <TextView
        android:id="@+id/speedTextView"
        android:layout_width="200px"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="200.5KB/s"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/downloadInfoTextView"
        android:layout_width="240px"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="waiting..."
        android:textSize="18sp" />
</LinearLayout>

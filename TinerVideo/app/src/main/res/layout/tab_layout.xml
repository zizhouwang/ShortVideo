<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:background="@color/tabBackgroundColor"
    android:layout_gravity="bottom">

    <FrameLayout
        android:id="@+id/bottomHomeFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.video.tiner.zizhouwang.tinervideo.CustomUI.EquScaImageView
            android:id="@+id/bottomHomeIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60px"
            android:layout_marginTop="18px"
            android:src="@drawable/home_click" />

        <com.video.tiner.zizhouwang.tinervideo.CustomUI.EquScaTextView
            android:id="@+id/bottomHomeTV"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:text="@string/home"
            android:textColor="@color/tabClickColor"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/bottomMeFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.video.tiner.zizhouwang.tinervideo.CustomUI.EquScaImageView
            android:id="@+id/bottomMeIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60px"
            android:layout_marginTop="18px"
            android:src="@drawable/me_button" />

        <com.video.tiner.zizhouwang.tinervideo.CustomUI.EquScaTextView
            android:id="@+id/bottomMeTV"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:text="@string/Me"
            android:textColor="@color/tabNotClickColor" />
    </FrameLayout>
</LinearLayout>
